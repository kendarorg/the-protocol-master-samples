{
  "pluginsDir": "plugins",
  "logLevel": "DEBUG",
  "dataDir": "data",
  "apiPort": 8081,
  "protocols": {
    "http-01": {
      "protocol": "http",
      "http": 80,
      "https": 443,
      "proxy": 9000,
      "ssl": {
        "der": "resource://certificates/ca.der",
        "key": "resource://certificates/ca.key",
        "cname": "C=US,O=Local Development,CN=local.org",
        "hosts": [
        ]
      },
      "plugins": {
        "mock-plugin": {
          "dataDir": "mocks"
        },
        "rate-limit-plugin": {
          "limitSites": [
            "@(py-rest|localhost|127.0.0.1)\\/api/.*"
          ],
          "rateLimit": 120,
          "warningThresholdPercent": 80,
          "resetTimeWindowSeconds": 60
        },
        "latency-plugin": {
          "latencySites": [
            "@(py-rest|localhost|127.0.0.1)\\/api/.*"
          ],
          "minMs": 50,
          "maxMs": 5000
        },
        "error-plugin": {
          "errorSites": [
            "@(py-rest|localhost|127.0.0.1)\\/api/.*"
          ],
          "showError": 500,
          "errorMessage": "Random Generated Error",
          "errorPercent": 5
        },
        "record-plugin": {
          "recordSites": [
            "py-rest"
          ]
        },
        "replay-plugin": {

        },
        "rewrite-plugin": {
          "rewritesFile": "rewrite.json"
        }
      }
    },
    "amqp-01": {
      "protocol": "amqp091",
      "port": 5672,
      "login": "root",
      "password": "password",
      "timeout": 30,
      "connectionString": "tcp://py-rabbit:5672",
      "plugins": {
        "publish-plugin": {
        },
        "record-plugin": {
          "resetConnectionsOnStart": true
        },
        "replay-plugin": {
          "resetConnectionsOnStart": true,
          "respectCallDuration": true
        }
      }
    },
    "mysql-01": {
      "protocol": "mysql",
      "port": 3306,
      "login": "root",
      "password": "password",
      "timeout": 30,
      "connectionString": "jdbc:mysql://py-mysql:3306/db",
      "force3BytesOkPacketInfo": true,
      "plugins": {
        "record-plugin": {},
        "replay-plugin": {}
      }
    }
  }
}
